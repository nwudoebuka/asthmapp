<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".features.more.MyAccountActivity">

  <View
      android:layout_width="match_parent"
      android:layout_height="148dp"
      android:background="@drawable/my_account_gradient"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/ivBack"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      android:src="@drawable/ic_back_white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/ivProfile"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginTop="72dp"
      android:src="@drawable/ic_big_profile"
      app:civ_border_color="@color/white"
      app:civ_border_width="2dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/ivLike"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@drawable/ic_edit"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="@id/ivProfile"
      app:layout_constraintTop_toTopOf="@id/ivProfile" />

  <TextView
      android:id="@+id/tvName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:textColor="@color/ebonyClay"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ivProfile"
      tools:text="Annie Franklin" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnMail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvName" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/solitude"
      app:layout_constraintBottom_toTopOf="@id/btnMySubscriptions"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnMail" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnMySubscriptions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="48dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnMail" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnPrivacyPolicy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnMySubscriptions" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnTermsAndConditions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnPrivacyPolicy" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnLogout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/btnTermsAndConditions" />

  <com.asthmapp.android.features.components.ButtonWithChevron
      android:id="@+id/btnDeleteAccount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginEnd="12dp"
      android:layout_marginBottom="16dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
